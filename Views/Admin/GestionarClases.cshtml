<div id="loader"></div>

<div id="div_contenido" class="container-fluid px-4" style="display:none">

    <!-- Nuevo Modal Reservar Hora-->
    <div tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <br />
        <div id="Error_ReservarHora"></div>
        <div class="modal-content">
            <form id="form_AdminClases" action="javascript:cancelarReserva();">
                <div class="modal-header btn-primary">
                    <h5 class="modal-title" id="exampleModalLabel">Gestionar Clases</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="inputFecha" type="text" placeholder="Fecha" onchange="ChangeFecha(this)" required />
                            <label for="selectorActividad">Seleccione un día</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <select name="Clase" class="form-control" type="text" required onchange="ChangeSelectClase(this)"></select>
                            <label for="selectorClase">Seleccione una clase</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <select name="Horario" class="form-control" type="text" required onchange="ChangeSelectHorario(this)"></select>
                            <label for="selectorHorario">Seleccione un horario</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <!--<button name="button" type="submit" class="btn btn-primary" disabled>Buscar</button>-->
                    <div><button name="button" type="submit" class="btn btn-danger" disabled>Cancelar Clase</button></div>
                </div>
            </form>

            <div class="me-3 ms-3">
                <table id="tabla_reservas" class="display responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>Rut</th>
                            <th>Nombre</th>
                            <th>Apellido Paterno</th>
                            <th>Apellido Materno</th>
                            <th>Clase</th>
                            <th>Fecha</th>
                            <th>Horario</th>
                            <th>Socio</th>
                            <th>Contacto</th>
                            <th>Cancelar Reserva</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Cancelar CLase -->
<div class="modal fade" id="cancelarClaseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div id="Error_NuevaClase"></div>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header btn-primary">
                <h5 class="modal-title" id="exampleModalLabel">Cancelar Reservas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="form_cancelarClases" action="javascript:CancelarReservaUsuario();">
                <div class="modal-body">
                    <h5 id="contenidoModel"> </h5>
                    <input name="idReserva" type="hidden" value="" required />
                    <input name="userName" type="hidden" value="" required />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-danger">Cancelar Clase</button>
                </div>
            </form>
        </div>
    </div>
</div>



