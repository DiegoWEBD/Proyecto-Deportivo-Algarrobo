<div class="modal fade" id="modalAsistentePadel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header btn-primary">
                <h5 class="modal-title" id="">Asistente Padel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="form_cancelarDiaInstalaciones" action="">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rutAsistentePadel" class="form-label">Rut (sin puntos con guion)</label>
                        <input type="text" maxlength="10" class="form-control" id="rutAsistentePadel">
                    </div>
                    <div class="mb-3">
                        <label for="nombreAsistentePadel" class="form-label">Nombres y Apellidos</label>
