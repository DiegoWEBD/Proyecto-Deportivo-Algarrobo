
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es-cl">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Agenda tu hora para nuestro gimansio y clases dirigidas" />
    <meta name="author" content="Canal Ltda" />
    <title>Reservas Deportivo Algarrobo</title>
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body class="bg-primary" style="background-color: #e64946 !important">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">

                                <div class="card-header text-center" style="background-color: rgba(0, 0, 0, 0)">
                                    <img class="img-fluid mt-3" src="~/Resources/Imagenes/logo deportivo.jpg" alt="logo" style="max-width:300px" />
                                    <div class="mt-3"></div>
                                    <h4>Inicio de Sesión</h4>
                                    <div class="mt-3"></div>
                                </div>
                                <div class="card-body">
                                    <form action="@Url.Action("Index","Login")" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" type="text" placeholder="Nombre de Usuario" name="usuario" maxlength="10" required
                                                   value="@{ if (ViewBag.nombreUsuario != null) { @ViewBag.nombreUsuario } }" />
                                            <label for="inputEmail">Rut de Usuario</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputPassword" type="password" placeholder="Password" name="password" required />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>
                                        <div class=" text-center align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <!-- <a class="small" href="@Url.Action("RecuperarPassword","Login")">¿Perdió su Contraseña?</a> -->
                                    <div class="small"><a href="@Url.Action("NuevoUsuario","Login")">¿Necesito una cuenta? ¡Inscribirse!</a></div>
                                    <div class="small"><a href="@Url.Action("ReservarHoraDia","Reservas")">Reservar Solo Una Hora (Sin Mensualidad)</a></div>
                                </div>
                                @{
                                    if (ViewBag.error != null)
                                    {
                                        if ("".Equals(ViewBag.error) == false)
                                        {
                                            <div class="card-footer text-center py-3">
                                                <div><i class="fas fa-exclamation-triangle" style="color:red"></i> <span>@ViewBag.error</span></div>
                                            </div>
                                        }
                                    }
                                    if (TempData["status"] != null)
                                    {
                                        if ("".Equals(TempData["status"]) == false)
                                        {
                                            <div class="card-footer text-center py-3">
                                                <div><i class="fas fa-check-circle" style="color:green"></i> <span>@TempData["status"]</span></div>
                                            </div>
                                        }
                                    }
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-2 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Desarrollado por &copy; Canal Ltda</div>
                        <div>
                            <img class="img-fluid" src="~/Resources/Imagenes/logo_cmp.png" alt="logo" style="max-width:90px" />
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/fontawesome/all.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/Principal/scripts.js"></script>
</body>
</html>