<div id="loader"></div>

<div id="div_contenido" class="container-fluid px-4" style="display:none">

    <div tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <br />
        <div id="Error_ReservarHora"></div>
        <div class="modal-content">
            <form id="form_AdminClases" action="javascript:onclickButtonGuardar();">
                <div class="modal-header btn-primary">
                    <h5 class="modal-title" id="exampleModalLabel">Administrar Instalaciones</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <select id="selectorTipoInstalacion" name="TipoInstalacion" class="form-control" type="text" required onchange="ChangeTipoInstalacion()"></select>
                            <label for="selectorTipoInstalacion">Seleccione un Tipo de Instalación</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <select id="selectorInstalacion" class="form-control" name="Instalacion" onchange="ChangeInstalacion()" required>
                            </select>
                            <label for="selectorInstalacion">Seleccione Instalación</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <select id="selectorTipoArriendo" class="form-control" name="TipoArriendo" onchange="ChangeTipoArriendo()" required>
                                <option value="1">Hora</option>
                                <option value="2">Día</option>
                            </select>
                            <label for="selectorTipoArriendo">Seleccione Tipo Arriendo</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input id="inputValorArriendo" value="" type="number" min="1" class="form-control" name="ValorArriendo" required />
                            <label for="inputValorArriendo">Valor Arriendo</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check" style="margin-left:0.2em">
                            <input class="form-check-input" type="checkbox" value="" id="CheckRegistroParticipantes">
                            <label class="form-check-label" for="CheckRegistroParticipantes">
                                Exigir Registro de Participantes
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <select id="selectorDia" class="form-control" name="Dia" onchange="ChangeDia()">
                                <option value="1">Lunes</option>
                                <option value="2">Martes</option>
                                <option value="3">Miercoles</option>
                                <option value="4">Jueves</option>
                                <option value="5">Viernes</option>
                                <option value="6">Sabado</option>
                                <option value="7">Domingo</option>
                            </select>
                            <label for="selectorDia">Seleccione una dia</label>
                        </div>
                    </div>

                    <div id="ContenedorHorarios" class="mb-3"></div>


                </div>
                <div class="modal-footer">
                    <div><button  type="button" data-bs-toggle="modal" data-bs-target="#agregarClaseModal" class="btn btn-success" onclick="ResetAgregarInstalacion()">Agregar Nueva Instalación</button></div>
                    <div><button name="button" type="submit" class="btn btn-success">Guardar Cambios</button></div>
                </div>
            </form>
        </div>
    </div>



</div>

<div class="modal fade" id="agregarClaseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div id="Error_NuevaClase"></div>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header btn-primary">
                <h5 class="modal-title" id="exampleModalLabel">Nueva Instalación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="form_agregarClases" action="javascript:agregarNuevaClase();">

                <div class="modal-body">
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="inputNombreInstalacion" type="text" placeholder="Nombre Instalación" required />
                            <label for="inputNombreInstalacion">Ingrese Nombre Nueva Instalación</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="inputNombreInstalacion2" type="text" placeholder="Nombre Instalación" required />
                            <label for="inputNombreInstalacion2">Confirme Nombre Nueva Instalación</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success">Agregar Nueva Instalación</button>
                </div>
            </form>
        </div>
    </div>
</div>



