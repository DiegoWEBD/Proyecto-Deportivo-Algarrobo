<div id="loader"></div>

<div id="div_contenido" class="container-fluid px-4" style="display:none">

    <div class="" id="modal_AgregarActividad" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <br />
        <div id="Error_ReservarHora"></div>
        <div class="modal-content">
            <form id="form_ReservarHora" action="javascript:ClickBuscarReservas();">
                <div class="modal-header btn-primary">
                    <h5 class="modal-title" id="exampleModalLabel">Asistencia a Clases</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="inputFecha" type="text" placeholder="Fecha" onchange="ChangeFecha(this)" required />
                            <label for="selectorActividad">Seleccione un día</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <select name="Clase" class="form-control" type="text" required onchange="ChangeSelectClase(this)"></select>
                            <label for="selectorClase">Seleccione una clase</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating mb-3 mb-md-0">
                            <select name="Horario" class="form-control" type="text" required onchange="ChangeSelectHorario(this)"></select>
                            <label for="selectorHorario">Seleccione un horario</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button name="button" type="submit" class="btn btn-success">Buscar</button>
                </div>
            </form>
            <div class="me-3 ms-3">
                <table id="tabla_reservas" class="display responsive" style="width:100%">
                    <thead>
                        <tr>
                            <th>Rut</th>
                            <th>Nombre</th>
                            <th>Apellido Paterno</th>
                            <th>Apellido Materno</th>
                            <th>Socio</th>
                            <th>Clase</th>
                            <th>Fecha</th>
                            <th>Horario</th>
                            <th>Presente</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>





