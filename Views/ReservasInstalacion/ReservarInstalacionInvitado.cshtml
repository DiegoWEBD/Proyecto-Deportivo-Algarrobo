                                <label for="inputFechaPago">Fecha</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-floating mb-3 mb-md-0">
                                <input id="inputHorarioPago" name="horario" class="form-control" type="text" readonly required />
                                <label for="inputHorarioPago">Horario</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-floating mb-3 mb-md-0">
                                <input id="inputValorPago" name="Valor" class="form-control" value="" readonly required />
                                <label for="inputValorPago">Valor Arriendo</label>
